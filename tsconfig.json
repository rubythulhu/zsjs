{
  "compilerOptions": {
    "target": "ES2022",
    "outDir": "./dist",
    "removeComments": true,
    "baseUrl": "./src",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "declaration": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules/**/*"]
}
